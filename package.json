{
    "name": "zk_battleship",
    "version": "0.0.1",
    "scripts": {
        "build:circuit": "nargo check && nargo compile --force && nargo execute",
        "test:circuit": "nargo test",
        "build:contract": "forge build --sizes && cd ./contract/verifier && forge build --sizes",
        "test:contract": "forge test --gas-report && cd ./contract/verifier && forge test --gas-report",
        "generate_zk_verify_contract": "ts-node ./js/write_solidity_verifier.ts",
        "test_prove": "ts-node ./js/prove.ts",
        "localtest": "ts-node ./js/localtest.ts",
        "onlinetest": "ts-node ./js/onlinetest.ts",
        "deploy-arbi-sep:HonkVerifier": "cd ./contract/verifier/ && source .env && forge script ./script/Verifier.s.sol --slow --rpc-url $ARBI_SEPOLIA_RPC_URL --broadcast --verify",
        "deploy-arbi-sep:ZKBattleship": "source .env && forge script ./contract/script/ZKBattleship.s.sol:ZKBattleshipDeployer --slow --rpc-url $ARBI_SEPOLIA_RPC_URL --broadcast --verify",
        "deploy-arbi:HonkVerifier": "cd ./contract/verifier/ && source .env && forge script ./script/Verifier.s.sol --slow --rpc-url $ARBI_RPC_URL  --broadcast --verify",
        "deploy-arbi:ZKBattleship": "source .env && forge script ./contract/script/ZKBattleship.s.sol:ZKBattleshipDeployer --slow --rpc-url $ARBI_RPC_URL --broadcast --verify"
    },
    "devDependencies": {
        "@aztec/bb.js": "^2.1.9",
        "@noir-lang/noir_js": "^1.0.0-beta.17",
        "@types/node": "^25.0.3",
        "@types/shelljs": "^0.10.0",
        "ethers": "^6.16.0",
        "shelljs": "^0.10.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {}
}