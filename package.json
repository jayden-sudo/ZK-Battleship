{
    "name": "zk_battleship",
    "version": "0.0.1",
    "scripts": {
        "build:circuit": "nargo check && nargo compile --force && nargo execute",
        "test:circuit": "nargo test",
        "build:contract": "forge build --sizes && cd ./contract/verifier && forge build --sizes",
        "test:contract": "forge test --gas-report && cd ./contract/verifier && forge test --gas-report",
        "write_vk": "bb write_vk --scheme ultra_honk  --oracle_hash keccak -b ./target/process_shot.json -o ./target",
        "generate_zk_verify_contract": "bb write_solidity_verifier --scheme ultra_honk --optimized -k ./target/vk -o ./contract/verifier/src/Verifier.sol",
        "test_prove": "ts-node ./js/prove.ts",
        "test": "ts-node ./js/test.ts"
    },
    "devDependencies": {
        "@aztec/bb.js": "^2.1.9",
        "@types/node": "^25.0.3",
        "@types/shelljs": "^0.10.0",
        "ethers": "^6.16.0",
        "shelljs": "^0.10.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "@noir-lang/noir_js": "^1.0.0-beta.17"
    },
    "dependencies": {
    }
}
